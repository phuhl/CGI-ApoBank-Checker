{
  "name": "taskRunner",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "DEV=true vitest --globals",
    "ci": "npm ci && npm run clean && run-p ci:* && echo '\n\nAll CI checks passed' ",
    "ci:prettier": "CI=true prettier --check .",
    "ci:test": "CI=true npm run test",
    "ci:eslint": "eslint . -c eslint-ci.config.mjs",
    "ci:build": "run-p build:*",
    "clean": "rimraf coverage build",
    "build": "npm run clean && mkdir -p dist && run-p build:*",
    "build:node_modules": "cp package{-lock,}.json dist && cd dist && npm ci --omit=dev",
    "build:tsc": "tsc -p tsconfig.json",
    "dev": "ts-node src/index.ts",
    "devVolta": "PATH=$VOLTA_HOME/bin:$PATH VOLTA_HOME=$HOME/.volta ts-node src/index.ts"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/html-to-text": "^9.0.4",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.1",
    "@vitest/eslint-plugin": "^1.3.8",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "tsutils": "^3.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "22.14.0",
    "npm": "10.9.2"
  }
}
